<h1 class="page-title">Nouvelle recette.</h1>
<%= simple_form_for (@preparation), url: recipe_preparations_path(recipe_id: @recipe.id) do |f| %>
  <%= f.input :quantity, label: "Quantité :"%>
  <%= f.input :ingredient, collection: Ingredient.all, input_html: {data: {controller: "tom-select"}} %>
  <%= f.button :submit, "Ajouter l'ingrédient"%>
<% end %>
<%= link_to "Plus d'ingrédients à ajouter", recipe_steps_path(recipe_id: @recipe.id), class: "primary-btn"  %>
<% if @recipe.preparations.any? %>
  <h3>Ingrédients :</h3>
  <% @recipe.preparations.each do |preparation| %>
  <% end %>
<% end %>
